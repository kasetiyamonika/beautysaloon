<div class="ftco-blocks-cover-1">
  <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image:  url(<%= asset_path 'hom_1.jpg' %>)">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-7">
            <h1 class="mb-3">All Appointment</h1>
            <p><a href="#" class="btn btn-primary">Learn More</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="ftco-section bg-light">
	<div class="container">
    <div class="heading-section mb-5">
      <div class="ftco-search">
        <div class="container">
          <p id="notice"><%= notice %></p>
            <table class="text-center text-dark table table-hover">
              <thead>
              <tr>
                <th>User</th>
                <th>Service</th>
                <th>Payment</th>
                <th>Payment mode</th>
                <th>Price</th>
                <th>Start time</th>
                <th>End time</th>
                <th>Status</th>
                <th>Remark</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @appointments.each do |appointment| %>
                <tr>
                  <td><%= appointment.user.first_name %></td>
                  <td><%= appointment.service.name %></td>
                  <td><%= appointment.payment_id %></td>
                  <td><%= appointment.payment_mode %></td>
                  <td><%= appointment.service.price %></td>
                  <td><%= appointment.start_time %></td>
                  <td><%= appointment.end_time %></td>
                  <td><%= appointment.status %></td>
                  <td><%= appointment.remark %></td>
                  <td><%= link_to 'Show', appointment %></td>
                  <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
                  <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div>
            <button class="btn btn-success btn-lg ml-0 mr-auto "><%= link_to 'New Appointment', new_appointment_path %></button>
          </div>
          <br>
      </div>
    </div>
  </div>
</div>
</section>
