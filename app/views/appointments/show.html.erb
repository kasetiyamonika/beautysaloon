<div class="ftco-blocks-cover-1">
  <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image:  url(<%= asset_path 'hom_1.jpg' %>)">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-7">
            <h1 class="mb-3">Show Appointment</h1>
            <p><a href="#" class="btn btn-primary">Learn More</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="ftco-section bg-light">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
					<div class="row">
						<div class="col-md-6">
								<br>
								<img src="/assets/haircut1.jpg" alt="Image" class="img-fluid">
						</div>
						<br>
            <div class="col-md-6">
              <div class="ftco-search">
                <div class="container">
                  <p>
                    <h2>Appointment details</h2>
                  </p>
                    <p>
                      <strong>User :</strong>
                      <%= current_user.first_name %>
                    </p>

                    <p>
                      <strong>Service :</strong>
                      <%= @appointment.service.name %>
                    </p>

                    <p>
                      <strong>Payment :</strong>
                      <%= @appointment.payment_id %>
                    </p>

                    <p>
                      <strong>Payment mode :</strong>
                      <%= @appointment.payment_mode %>
                    </p>

                    <p>
                      <strong>Price :</strong>
                      <%= @appointment.service.price %>
                    </p>

                    <p>
                      <strong>Start time :</strong>
                      <%= @appointment.start_time %>
                    </p>

                    <p>
                      <strong>End time :</strong>
                      <%= @appointment.end_time %>
                    </p>

                    <p>
                      <strong>Status :</strong>
                      <%= @appointment.status %>
                    </p>

                    <p>
                      <strong>Remark :</strong>
                      <%= @appointment.remark %>
                    </p>
                    <%= link_to 'Edit', edit_appointment_path(@appointment) %> |
                    <%= link_to 'Back', appointments_path %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</section>
