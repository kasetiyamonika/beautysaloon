<div class="ftco-blocks-cover-1">
  <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image:  url(<%= asset_path 'hom_1.jpg' %>)">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-7">
            <h1 class="mb-3">Orders Details</h1>
            <p><a href="#" class="btn btn-primary">Learn More</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="ftco-section bg-light">
	<div class="container">
    <div class="heading-section mb-5">
      <div class="ftco-search">
        <div class="container">
          <p id="notice"><%= notice %></p>
            <table class="text-center text-dark table table-hover">
            <thead>
              <tr>
                <th>User</th>
                <th>email</th>
                <th>Contact No</th>
                <th>product</th>
                <th>Payment</th>
                <th>Payment mode</th>
                <th>Address</th>
                <th>Date time</th>
                <th>Total</th>
                <th>Status</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.user.first_name %></td>
                  <td><%= order.user.email %></td>
                  <td><%= order.user.mobile %></td>
                  <td><%= order.products.name %></td>
                  <td><%= order.payment_id %></td>
                  <td><%= order.payment_mode %></td>
                  <td><%= order.user.address %></td>
                  <td><%= order.date_time %></td>
                  <td><%= order.total %></td>
                  <td><%= order.status %></td>
                  <td><%= link_to 'Show', order %></td>
                  <td><%= link_to 'Edit', edit_order_path(order) %></td>
                  <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <div>
          <button class="btn btn-success btn-lg"><%= link_to 'New Order products',new_order_path %></button>
        </div>
        <br>
      </div>
    </div>
  </div>
</section>
