<div class="ftco-blocks-cover-1">
  <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image:  url(<%= asset_path 'hom_1.jpg' %>)">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-7">
            <h1 class="mb-3">Show Order</h1>
            <p><a href="#" class="btn btn-primary">Learn More</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="ftco-section bg-light">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
					<div class="row">
						<div class="col-md-6">
								<br>
								<img src="/assets/haircut1.jpg" alt="Image" class="img-fluid">
						</div>
						<br>
            <div class="col-md-6">
              <div class="ftco-search">
                <div class="container">
                  <p>
                    <h2>User details</h2>
                  </p>
                    <p>
                      <strong>User :</strong>
                      <%= current_user.first_name %>
                    </p>

                    <p>
                      <strong>Email :</strong>
                      <%= current_user.email %>
                    </p>

                    <p>
                      <strong>Address :</strong>
                      <%= current_user.address %>
                    </p>

                    <p>
                      <strong>Mobile :</strong>
                      <%= current_user.mobile %>
                    </p>


                    <p>
                      <strong>Payment :</strong>
                      <%= @order.payment_id %>
                    </p>

                    <p>
                      <strong>Payment mode :</strong>
                      <%= @order.payment_mode %>
                    </p>

                    <p>
                      <strong>Date time :</strong>
                      <%= @order.date_time %>
                    </p>

                    <p>
                      <strong>Total :</strong>
                      <%= @order.total %>
                    </p>

                    <p>
                      <strong>Status :</strong>
                      <%= @order.status %>
                    </p>
                    <button class="btn btn-success btn-lg"><%= link_to 'Edit', edit_order_path(@order) %></button>
                    <button class="btn btn-success btn-lg"><%= link_to 'Back', orders_path %></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
  			</div>
      </div>
		</div>
	<br>
</section>
